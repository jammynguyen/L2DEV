@model PE.HMIWWW.ViewModel.Module.Lite.Material.VM_RawMaterialOverview
@{
    Layout = "~/Views/Shared/_LayoutWithoutWidgets.cshtml";
}

@section module_menu
{
    @Html.ImageButton("scrap", "onScrapBtnEvent()", false)
    @Html.ImageButton("assign_billets", "onUnassignBtnEvent()", false)
}

<div class="container-fluid p-3">
    <div class="row">
        <div class="col-3 grid-filter" id="RawMaterialSearchGrid">
            @Html.Partial("~/Views/Module/PE.Lite/RawMaterial/_RawMaterialSearchGrid.cshtml", Model)
        </div>
        <div class="col-9 element-details" id="RawMaterialDetails">
            <div class="row justify-content-center plug">
                <div class="col-6 align-self-center">
                    <img src="~/Content/Shared/plug.png" />
                    <p class="mt-5 plug-info">@VM_Resources.INFO_SelectPlugInfo</p>
                </div>
            </div>
        </div>
    </div>
</div>

@Styles.Render("~/Content/Module/RawMaterial")
@Scripts.Render("~/Scripts/Module/RawMaterial")